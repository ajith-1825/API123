  <style>
    .sidenav {
      height: 100%;
      /* Full-height: remove this if you want "auto" height */
      width: 300px;
      /* Set the width of the sidebar */
      position: fixed;
      /* Fixed Sidebar (stay in place on scroll) */
      z-index: 1;
      /* Stay on top */
      top: 0;
      /* Stay at the top */
      left: 0;
      color: white;
      background-color: #111;
      /* Black */
      overflow-x: hidden;
      /* Disable horizontal scroll */
      padding: 6px 8px 6px 16px;
      text-decoration: none;
      font-size: 10px;
      display: inline-block;
      position: fixed;
      bottom: 0;
      box-shadow: 0 2px 5px 0 rgb(0 0 0 / 5%), 0 2px 10px 0 rgb(0 0 0 / 5%);
    }

    .sidenav h1 {
      padding-top: 10px;
      font-size: 20px;
    }

    /* When you mouse over the navigation links, change their color */
    .sidenav a:hover {
      color: white;
      background-color: blue;
    }

    /* Style page content */
    .main {
      margin-left: 300px;
      /* Same as the width of the sidebar */
      padding: 0px 10px;
    }

    .desk {
      width: 50%;
    }

    .list-group a {
      background-color: #111;
      color: white;
    }

    .accountHead {
      margin-left: 300px;
      padding: 0px 10px;
      width: 1200px;
    }

    .del {
      position: absolute;
      right: 0px;
    }
  </style>

