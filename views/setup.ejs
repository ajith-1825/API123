      <h5>Financial Statement Head</h5>
      <ul style="padding: 10px">
        <% for(var i=0; i<user.expenditure.length;i++) { %>
        <form class="" action="/deleteExpenditure" method="post">
          <li>
            <%= user.expenditure[i] %>
            <button class="del fas fa-solid fa-trash fa-fw me-3"></button>
            <input type="hidden" name="listName" value="<%= i %>"></input>
